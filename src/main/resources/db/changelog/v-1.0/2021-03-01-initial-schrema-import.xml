<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="2020-03-01_1" author="koen">
        <createTable tableName="email_table">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="VARCHAR(256)"/>
            <column name="main" type="BOOL"/>
        </createTable>
    </changeSet>

    <changeSet id="2020-03-01_2" author="koen">
        <createTable tableName="user_table">
            <column name="id" type="VARCHAR(256)">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_type" type="VARCHAR(7)"/>
            <column name="email_table_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_address_email_table" references="email_table(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>